<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_login">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:padding="30dp">



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TimeTable"
        android:id="@+id/timetable"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:layout_below="@+id/fsyllabus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Leave"
        android:id="@+id/sleave"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/stimetable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Notice"
            android:id="@+id/shownotice"
            android:layout_marginTop="15dp"
            android:background="@color/btn_login_bg"
            android:textColor="@color/btn_login"
            android:layout_below="@+id/sleave"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="College Structure"
        android:id="@+id/college"
        android:layout_marginTop="15dp"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:layout_below="@+id/sleave"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher Info"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:id="@+id/teacherinfo"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/college" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Syllabus"
            android:id="@+id/syllabus"
            android:background="@color/btn_login_bg"
            android:textColor="@color/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MSBTE"
        android:textStyle="bold"
        android:background="@color/btn_login_bg"
        android:textColor="@color/btn_login"
        android:id="@+id/msbte"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/teacherinfo"
        android:layout_alignEnd="@+id/teacherinfo" />
    </LinearLayout>
</RelativeLayout>
